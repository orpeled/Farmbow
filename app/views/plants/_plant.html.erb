<div class="row">
  <div class="plant-image span1 ">
    <%= image_tag("default-tomato.png") %>
  </div>
  <div class="span5">
      <ul class="plant-details row">
          <li>
            <% plant_name = plant['name'] %>
            <% if !plant_name.nil? %>
                <h4>Plant Name:<%= plant['name'] %></h4>
            <% end %>
          </li>
          <li>
            <% plant_type = plant['type_of_plant'] %>
            <% if !plant_type.nil? %>
                <h4>Plant Type:<%= plant['type_of_plant'] %></h4>
            <% end %>
          </li>
      </ul>

      <div class="progress-bar">
        <% plant_irrigation_level = plant['irrigation_level'] %>
        <%= progress_bar(plant.irrigation_level.to_i, :color => 'blue', :rounded => true ) %>
        <% if !plant_irrigation_level.nil? %>
            <div class="water-level">Water Level: <%= plant['irrigation_level'] %></div>
        <% end %>
      </div>
  </div>
</div>
<div class="temprature row">
  <% if current_user.current_temperature.nil? %>
    <h4> Couldn't read temperature just yet. please wait and refresh.</h4>
<% else %>
    <% if (current_user.current_temperature >= plant.safe_temp_min) and (current_user.current_temperature <= plant.safe_temp_max) %>
        <h4> Temperature is within safe range. </h4>
    <% else %>
        <h4> Temperature isn't within safe range. </h4>
    <% end %>
<% end %>
</div>

