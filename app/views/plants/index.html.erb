<%- model_class = Plant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:type_of_plant) %></th>
      <th><%= model_class.human_attribute_name(:initial_plant_info) %></th>
      <th><%= model_class.human_attribute_name(:irrigation_quantity) %></th>
      <th><%= model_class.human_attribute_name(:irrigation_frequency) %></th>
      <th><%= model_class.human_attribute_name(:irrigation_level) %></th>
      <th><%= model_class.human_attribute_name(:irrigation_info) %></th>
      <th><%= model_class.human_attribute_name(:fertilizer_quantity) %></th>
      <th><%= model_class.human_attribute_name(:fertilizer_frequency) %></th>
      <th><%= model_class.human_attribute_name(:temperature_info) %></th>
      <th><%= model_class.human_attribute_name(:safe_temp_min) %></th>
      <th><%= model_class.human_attribute_name(:safe_temp_max) %></th>
      <th><%= model_class.human_attribute_name(:sun_level) %></th>
      <th><%= model_class.human_attribute_name(:sun_info) %></th>
      <th><%= model_class.human_attribute_name(:irrigation_level_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= link_to plant.id, plant_path(plant) %></td>
        <td><%= plant.name %></td>
        <td><%= plant.type_of_plant %></td>
        <td><%= plant.initial_plant_info %></td>
        <td><%= plant.irrigation_quantity %></td>
        <td><%= plant.irrigation_frequency %></td>
        <td><%= plant.irrigation_level %></td>
        <td><%= plant.irrigation_info %></td>
        <td><%= plant.fertilizer_quantity %></td>
        <td><%= plant.fertilizer_frequency %></td>
        <td><%= plant.temperature_info %></td>
        <td><%= plant.safe_temp_min %></td>
        <td><%= plant.safe_temp_max %></td>
        <td><%= plant.sun_level %></td>
        <td><%= plant.sun_info %></td>
        <td><%= plant.irrigation_level_updated_at %></td>
        <td><%=l plant.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_plant_path(plant), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      plant_path(plant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_plant_path,
            :class => 'btn btn-primary' %>
