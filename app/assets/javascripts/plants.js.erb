//    $("mywaterlevel").progressbar({ value: 50 });
    var progress = setInterval(function() {
        var $bar = $('.bar');

        if ($bar.width()>=<%= Plant.nil? ? 0 : Plant.first.irrigation_level * 4 %>) {
            clearInterval(progress);

        } else {
            $bar.width($bar.width()+40);
        }
        $bar.text($bar.width()/4 + "%");
    }, 800);

});