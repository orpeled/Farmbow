    // Get the plant object ready

    var progress = setInterval(function() {
        var $bar = $('.bar');
        var water_level = parseInt($('#water_for_progressbar').text(), 10);

        if ($bar.width()>= (water_level * 4)) {
            clearInterval(progress);

        } else {
            $bar.width($bar.width()+40);
        }
        $bar.text($bar.width()/4 + "%");
    }, 800);

});